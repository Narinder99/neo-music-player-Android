<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2F2B2B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_clear_black_24dp"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="Create New Playlist"
            android:textColor="@color/White"
            android:textSize="20sp"></TextView>
    </LinearLayout>

    <EditText
        android:id="@+id/playlistName"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="Express your vibe with a Title"
        android:textSize="17sp"
        android:textColor="@color/White"
        android:background="@drawable/background_color"></EditText>


    <TextView
        android:id="@+id/saveNewPlaylist"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:gravity="center|top"
        android:layout_gravity="end"
        android:text="OK"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#421414"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"></TextView>

</LinearLayout>
