<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:src="@drawable/ic_shuffle_black_24dp"
        app:layout_constraintEnd_toStartOf="@+id/shuffle_all"
        app:layout_constraintTop_toTopOf="parent"></ImageView>
    <TextView
        android:id="@+id/shuffle_all"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="Shuffle All"
        android:textSize="16sp"
        android:textColor="@color/White"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:src="@drawable/ic_brush_black_24dp"
        app:layout_constraintEnd_toStartOf="@+id/shuffle_all"
        app:layout_constraintTop_toBottomOf="@+id/imageView"></ImageView>
    <TextView
        android:id="@+id/themes"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="Themes"
        android:textSize="16sp"
        android:textColor="@color/White"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shuffle_all"></TextView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:src="@drawable/ic_graphic_eq_black_24dp"
        app:layout_constraintEnd_toStartOf="@+id/themes"
        app:layout_constraintTop_toBottomOf="@+id/imageView1"></ImageView>
    <TextView
        android:id="@+id/equaliser"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="Equaliser"
        android:textSize="16sp"
        android:textColor="@color/White"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/themes"></TextView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:src="@drawable/ic_settings_black_24dp"
        app:layout_constraintEnd_toStartOf="@+id/equaliser"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"></ImageView>
    <TextView
        android:id="@+id/settings"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="Settings"
        android:textSize="16sp"
        android:textColor="@color/White"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equaliser"></TextView>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:src="@drawable/ic_share_black_24dp"
        app:layout_constraintEnd_toStartOf="@+id/settings"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"></ImageView>
    <TextView
        android:id="@+id/share_app"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="Share App"
        android:textSize="16sp"
        android:textColor="@color/White"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>